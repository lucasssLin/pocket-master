<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.product.mapper.BrandMapper">


    <select id="selectBrandList" resultType="com.ruoyi.product.api.domain.Brand">
        select id, name, logo, create_time, create_by,
               update_time, update_by, del_flag, remark from `pocket-product`.brand
        <where>
            <if test="name!=null and name!=''">
                and name like concat('%',#{name},'%')
            </if>
            and del_flag = 0
        </where>

    </select>
    <select id="selectBrandById" resultType="com.ruoyi.product.api.domain.Brand">
        select * from `pocket-product`.brand where id = #{id}
    </select>

    <insert id="insertBrand">
        insert into `pocket-product`.brand(
            <if test="id!=null and id!=''">id,</if>
            <if test="name!=null and name!=''">name,</if>
            <if test="logo!=null and logo!=''">logo,</if>
            <if test="createBy!=null and createBy!=''">create_by,</if>
            <if test="remark!=null and remark!=''">remark,</if>
            create_time) values (
            <if test="id!=null and id!=''">#{id},</if>
            <if test="name!=null and name!=''">#{name},</if>
            <if test="logo!=null and logo!=''">#{logo},</if>
            <if test="createBy!=null and createBy!=''">#{createBy},</if>
            <if test="remark!=null and remark!=''">#{remark},</if>
            now()
        )
    </insert>


    <update id="updateBrand">
        update `pocket-product`.brand
        <set>
            <if test="name!=null and name!=''">name=#{name},</if>
            <if test="logo!=null and logo!=''">logo=#{logo},</if>
            <if test="remark!=null and remark!=''">remark=#{remark},</if>
            <if test="updateBy!=null and updateBy!=''">update_by=#{updateBy},</if>
            update_time = now()
        </set>
        where id = #{id}
    </update>

    <delete id="deleteBrandByIds">
        update `pocket-product`.brand set del_flag =2 where id in
        <foreach collection="array" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>


</mapper>